<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/main_tvStartGame_ripple">

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_tvStartGame_ripple" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/main_tvStartGame_background" />
            <stroke android:color="@color/main_tvStartGame_border" android:width="1dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</ripple>